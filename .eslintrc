{
  "plugins": [
    "html"
  ],
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    // allow paren-less arrow functions
    "arrow-parens": 0,
    // allow async-await
    "generator-star-spacing": 0,
    // allow debugger during development
    "no-debugger": 0
  }
}